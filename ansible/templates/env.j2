# Django settings
DJANGO_SECRET_KEY="{{ django_secret_key }}"
DJANGO_DEBUG="{{ django_debug | default('False') }}"
DJANGO_LOGLEVEL="{{ django_loglevel | default('info') }}"
DJANGO_ALLOWED_HOSTS="{{ django_allowed_hosts | default('*') }}"
DJANGO_SUPERUSER_USERNAME="{{ django_superuser_username }}"
DJANGO_SUPERUSER_EMAIL="{{ django_superuser_email }}"
DJANGO_SUPERUSER_PASSWORD="{{ django_superuser_password }}"
DJANGO_LANGUAGE_CODE="{{ django_language_code | default('en-us') }}"
DJANGO_TZ="{{ django_tz | default('UTC') }}"

# Database settings
DATABASE_ENGINE="{{ db_engine | default('postgresql_psycopg2') }}"
DATABASE_NAME="{{ db_name }}"
DATABASE_USERNAME="{{ db_user }}"
DATABASE_PASSWORD="{{ db_password }}"
DATABASE_HOST="{{ db_host | default('pg-db') }}"
DATABASE_PORT="{{ db_port | default('5432') }}"
DATABASE_AUTH_METHOD="{{ db_auth_method | default('trust') }}"
DATABASE_LOCAL="{{ db_locale | default('en-US') }}"

# Docker volume
DATABASE_VOLUME_NAME="{{ db_volume_name | default('pgdata_forsber') }}"
